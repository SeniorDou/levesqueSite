				<a {% if route_name matches '{app_logout}' %} class="nav-item active" {% else %} class="nav-item" {% endif %} class="nav-link nav-item flex-sm-fill text-sm-center" href="{{path('app_logout')}}">
					Deconnecter
				</a>
			{% else %}
