					Se connecter
				</a>
				<a {% if route_name matches '{app_register}' %} class="nav-item active" {% else %} class="nav-item" {% endif %} class="nav-link nav-item flex-sm-fill text-sm-center" href="{{path('app_register')}}">
					S'inscrire
				</a>
			{% endif %}
			<a {% if route_name matches '{informations}' %} class="nav-item active" {% else %} class="nav-item" {% endif %} class="nav-link nav-item flex-sm-fill text-sm-center" href="{{path('informations')}}">
