{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content | raw }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info btn-sm" href="{{ path('article_index') }}">retour Ã  la liste</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-secondary btn-sm" href="{{ path('article_edit', {'id': article.id}) }}">editer</a>

    {{ include('article/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
